<Page
    x:Class="Ghenterprise.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ghenterprise"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource viewModelLocator}, Path=User}">
    
    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <StackPanel 
            RelativePanel.AlignHorizontalCenterWithPanel="True" 
            RelativePanel.AlignVerticalCenterWithPanel="True"
            Orientation="Vertical"
            Width="500">
            <TextBox 
                  Text="{Binding User.firstname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                  Margin="5" />
            <Button Content="Register" Command="{Binding Path=RegisterCommand}" Margin="5" />
        </StackPanel>
    </RelativePanel>
</Page>
