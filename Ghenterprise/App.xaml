                <ResourceDictionary Source="/Styles/FontSizes.xaml"/>
                <ResourceDictionary Source="/Styles/Margins.xaml"/>
                
                <ResourceDictionary Source="/Styles/PageStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
